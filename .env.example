# =====================
# Auth
# =====================
OPENAI_API_KEY=YOUR_API_KEY

# =====================
# Retrieval (FAISS search)
# =====================
TOP_K=5
MIN_SCORE=0.40

# =====================
# Chunking
# =====================
CHUNK_SIZE_CHARS=1000
OVERLAP_CHARS=160

# =====================
# Embeddings
# =====================
EMBEDDING_MODEL=text-embedding-3-small
EMBED_BATCH_SIZE=64
EMBED_TIMEOUT_S=60
EMBED_RETRIES=2

# Prices per 1M tokens (USD) — embeddings input only
PRICE_EMBED_INPUT=0.02

# =====================
# LLM (answer generation)
# =====================
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_MAX_OUTPUT_TOKENS=400
LLM_TIMEOUT_S=30
LLM_RETRIES=2

# Prices per 1M tokens (USD) — LLM input/output
PRICE_LLM_INPUT=0.20
PRICE_LLM_OUTPUT=0.60

# =====================
# Prompt / policy
# =====================
SYSTEM_PROMPT=You answer using ONLY the provided context. If context is insufficient, say "I don't know based on the provided documents." Always include citations to sources when you answer.

PROMPT_VERSION=v1